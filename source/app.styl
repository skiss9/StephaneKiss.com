// Reset
html,body,div,ul,ol,li,dl,dt,dd,h1,h2,h3,h4,h5,h6,pre,form,p,blockquote,fieldset,input
  margin 0
  padding 0
h1,h2,h3,h4,h5,h6,pre,code,address,caption,cite,code,em,strong,th
  font-size 1em
  font-weight normal
  font-style normal
ul,ol
  list-style none
fieldset,img
  border none
caption,th
  text-align left
table
  border-collapse collapse
  border-spacing 0

@font-face
  font-family 'code-light'
  src url('fonts/code-light/code_light-webfont.eot')
  src url('fonts/code-light/code_light-webfont.eot?#iefix') format('embedded-opentype'),
         url('fonts/code-light/code_light-webfont.woff2') format('woff2'),
         url('fonts/code-light/code_light-webfont.woff') format('woff'),
         url('fonts/code-light/code_light-webfont.ttf') format('truetype'),
         url('fonts/code-light/code_light-webfont.svg#code-light') format('svg')
  font-weight normal
  font-style normal
  
box-shadow-blur = 8px

light-gray = rgb(130, 142, 164)
light-gray-hover = lighten(rgb(130, 142, 164), 30%)

body
  margin 0 auto 100px auto
  width 1180px
  background-color #424955

header
  position relative
  margin-top 40px
  padding 16px 0
  font-family 'code-light'
  text-align center
  cursor default  

  .back-button
    position absolute
    left 30px
    top 37px
    font-size 38px
    color light-gray
    cursor pointer
    &:hover
      color light-gray-hover

  .logo
    margin-bottom 50px

    .title
      font-size 40px
      line-height 42px
      letter-spacing 6px
      display inline-block
      vertical-align -6px
      color rgb(61, 189, 193)
      color white
      
    .subtitle
      margin-top 10px
      font-size 20px
      letter-spacing 19px
      color rgb(61, 189, 193)

  .social-links
    position absolute
    right 0
    top 37px
    a
      float right
      font-size 30px
      color light-gray
      margin-right 20px
      &:hover
        color light-gray-hover

#home
  box-shadow 0px 0px box-shadow-blur 0px rgba(0,0,0,0.50)

  #home-player
    height 504px
    
    video
      height 100%

#details
  box-shadow 0px 0px box-shadow-blur 0px rgba(0,0,0,0.50)

  #video-cover
    line-height 0
    img
      width 100%

.thumbnails
  margin 0 auto 0 auto
  line-height 0
  background-color black

  .thumbnail
    position relative
    display inline-block

    img
      width 295px
      height 166px
      object-fit cover

    .title
      display none
      padding-top 4px
      position absolute
      margin 0 auto
      bottom 0
      left 0
      right 0
      line-height 22px
      font-family 'code-light'
      font-size 22px
      letter-spacing 3px
      color light-gray
      background-color black
      opacity 0.8
      text-align center
      cursor pointer

    &:hover .title
      display block

#video-player
  height 664px

  &.is-anamorphic
    height 494px

  iframe
    width 100%
    height 100%
    border 0

#social-buttons
  display none
  margin-top 30px
  margin-bottom 40px
  text-align center
  padding 10px 0
  height 20px

  .fb-follow
    margin-right 20px

  .fb-follow, .twitter-follow-button
    display inline-block
    vertical-align top
